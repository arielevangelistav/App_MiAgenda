@model IEnumerable<MiAgenda.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Agenda de usuarios</h1>

    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuarios">Editar</a> |
                <a asp-action="Details" class=" btn btn-primary" asp-route-id="@item.IdUsuarios">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuarios">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
